# ─── Environment ───────────────────────────────────────────────
# "local" for Docker Compose dev, "aws" for ECS/RDS deployment
ENVIRONMENT=local

# MySQL Database Configuration
MYSQL_ROOT_PASSWORD=your_root_password_here
MYSQL_DATABASE=outsource_db
MYSQL_USER=your_db_user
MYSQL_PASSWORD=your_db_password

# Application Configuration
DATABASE_URL=mysql+pymysql://your_db_user:your_db_password@db:3306/outsource_db
API_PORT=8000
MYSQL_PORT=3308

# Database pool settings (defaults are fine for local dev)
# DB_POOL_SIZE=5
# DB_MAX_OVERFLOW=10
# DB_POOL_RECYCLE=1800

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-generate-with-openssl-rand-hex-32
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_HOURS=24

# CORS: leave empty for local dev (allows localhost:* automatically)
# For production, set comma-separated origins e.g. https://myapp.com,https://www.myapp.com
ALLOWED_ORIGINS=

# Google Gemini API Configuration
GEMINI_API_KEY=your-gemini-api-key-from-aistudio-google-com
